{
  "name": "graphql-typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src/** --ext .ts",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest --runInBand --forceExit",
    "build": "tsc",
    "start": "NODE_ENV=development DEBUG=server nodemon --watch 'src/**/*.ts' --ignore 'src/**/__test__/*.ts' --exec 'ts-node' src/index.ts",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "fixtures": "fixtures ./fixtures -c ormconfig.js --require ts-node/register"
  },
  "author": "Lars Graubner <mail@larsgraubner.de> (https://larsgraubner.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/body-parser": "1.17.0",
    "@types/compression": "0.0.36",
    "@types/connect-redis": "0.0.10",
    "@types/cors": "2.8.5",
    "@types/debug": "4.1.4",
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/express-session": "1.15.12",
    "@types/graphql": "14.2.0",
    "@types/hapi__joi": "15.0.1",
    "@types/helmet": "0.0.43",
    "@types/http-errors": "1.6.1",
    "@types/jest": "24.0.13",
    "@types/lodash": "4.14.127",
    "@types/node": "12.0.1",
    "@types/passport": "1.0.0",
    "@types/passport-local": "1.0.33",
    "@types/passport-twitter": "1.0.34",
    "@types/pg": "7.4.14",
    "@types/stack-trace": "0.0.29",
    "@types/supertest": "2.0.7",
    "@typescript-eslint/eslint-plugin": "1.9.0",
    "@typescript-eslint/parser": "1.9.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "http-errors": "1.7.2",
    "husky": "2.3.0",
    "jest": "24.8.0",
    "lint-staged": "8.1.6",
    "nodemon": "1.19.0",
    "prettier": "1.17.1",
    "stack-trace": "0.0.10",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tslint": "5.16.0",
    "typeorm-fixtures-cli": "1.1.3",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "@godaddy/terminus": "4.1.0",
    "@hapi/joi": "15.0.3",
    "apollo-server": "2.14.2",
    "apollo-server-express": "2.5.0",
    "bcrypt": "3.0.6",
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "connect-redis": "3.4.1",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "dotenv": "8.0.0",
    "express": "4.16.4",
    "express-session": "1.16.1",
    "graphql": "14.3.0",
    "helmet": "3.18.0",
    "lodash": "4.17.11",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "passport-twitter": "1.0.4",
    "pg": "7.11.0",
    "typeorm": "0.2.17"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json"
    },
    "rules": {
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/no-explicit-any": 0
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
